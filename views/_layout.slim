doctype html
html
  head
    title PGP Web
    link href="/uikit/dist/css/uikit.min.css" rel='stylesheet' type='text/css'
    link href="@fortawesome/fontawesome-free/css/all.css" rel='stylesheet' type='text/css'
  body
    nav.uk-navbar.uk-navbar-container.uk-margin-bottom uk-navbar=""
      .uk-offcanvas-content.uk-position-top-right.uk-padding-small
        a.fab.fa-github-square.uk-link-reset style="font-size: 3em" href="#offcanvas-usage" uk-toggle=""
        div id="offcanvas-usage" uk-offcanvas="flip: true; overlay: true"
          .uk-offcanvas-bar
            button.uk-offcanvas-close type="button" uk-close=""
            h3 ="On Github project"
            ul
              li
                a href="https://github.com/gnublin/pgp-web/" target="_blank" ="Project"
              li
                a href="https://github.com/gnublin/pgp-web/issues" target="_blank" ="Open issue"
              li
                a href="https://github.com/gnublin/pgp-web/blob/master/README.md" target="_blank" ="Readme"
              li
                a href="https://github.com/gnublin/pgp-web/blob/master/LICENSE" target="_blank" = "MIT License"
      a.uk-navbar-item.uk-logo.uk-margin-large-right href='/' Home
      .uk-navbar-left
        ul.uk-navbar-nav
          li
            a.uk-text-capitalize href="#" Secrets dir
            .uk-navbar-dropdown
              ul.uk-nav.uk-navbar-dropdown-nav
                li: a.uk-text-capitalize href="/Item1"= "Item1"
          li
            a.uk-text-capitalize href="/settings" Settings
    .uk-container.uk-container-large.uk-position-relative uk-height-viewport="expand: true"
      - if @message
        - if @message[:type] == 'error'
          .uk-alert-danger = @message[:msg]
        - elsif @message[:type] == 'warning'
          .uk-alert-warning = @message[:msg]
        - elsif @message[:type] == 'success'
          .uk-alert-success = @message[:msg]
        - else
          .uk-alert-primary = @message[:msg]
      br
      == yield
    .uk-container.uk-container-expand.uk-background-muted.uk-text-center.uk-container-small
        = "TheDreamTeam"
        a.uk-link-reset.uk-padding-small.uk-padding-remove-top.uk-padding-remove-bottom target="_blank" href="https://github.com/gnublin/pgp-web/blob/master/LICENSE" = "MIT License"
    script src="/uikit/dist/js/uikit.min.js" type="text/javascript"
    script src="/uikit/dist/js/uikit-icons.min.js" type="text/javascript"

